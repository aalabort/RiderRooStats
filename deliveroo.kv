<NavDrawer>:
    anim_type: 'slide_above_anim'
    SidePanel:
    MainPanel:

<SidePanel>:
    orientation: 'vertical'
    spacing: 1

    Button:
        text: 'Today Info'
    Button:
        text: 'Statistics'

    Button:
        text: ''
        background_normal: 'images/Deliveroo_Logo.png'


