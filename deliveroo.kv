        use_separator: True
        ActionPrevious:
	        app_icon: 'atlas://data/images/defaulttheme/splitter_grip'
            title: 'Driver 14940 stats'
            with_previous: False
            on_press: app.root.toggle_sidepanel()
        ActionOverflow:
        ActionButton:
            text: 'Btn0'
            icon: 'atlas://data/images/defaulttheme/audio-volume-high'
        #DatePicker:
        ActionButton:
            text: 'Btn2'
            icon:'images/Tips.png'
        ActionButton:
            text: 'Btn3'
            icon:'images/money.png'
        ActionButton:
